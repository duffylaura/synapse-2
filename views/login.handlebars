<div class="columms custom-columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="column is-half is-offset-one-quarter">
     <div class="col-sm"><img src="./assets/profile-img.png" class="img-fluid" alt='Profile'></img> </div>
    </div>
  </div>
